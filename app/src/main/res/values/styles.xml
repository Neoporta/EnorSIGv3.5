<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->

    <style name="MyStyleButton" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/primary_light</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MyImageView" parent="Theme.AppCompat.Light">
        <item name="android:src">@mipmap/ic_camera_placeholder</item>
        <item name="android:contentDescription">@string/desc</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



</resources>
